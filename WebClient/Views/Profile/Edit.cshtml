
@model Socializr.Models.Profile.EditProfileModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Profile</h2>

@using (Html.BeginForm("Edit", "Profile", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(false, null, new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.FName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.LName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IsMale, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.RadioButtonFor(model => model.IsMale, "true", new { id = "male" })
            @Html.Label("male", "Male")

            @Html.RadioButtonFor(model => model.IsMale, "false", new { id = "female" })
            @Html.Label("female", "Female")
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IsPublic, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.RadioButtonFor(model => model.IsPublic, "true", new { id = "public" })
            @Html.Label("public", "Public Profile")

            @Html.RadioButtonFor(model => model.IsPublic, "false", new { id = "private" })
            @Html.Label("private", "Private Profile")
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Birthday, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(m => m.Birthday, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IdCounty, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.IdCounty, Model.CountiesSelectItems, "select county", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IdCity, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.IdCity, Model.CitiesSelectItems, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.InterestIds, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.ListBoxFor(m => m.InterestIds, Model.SelectedInterests, new { @class = "form-control" })
        </div>
    </div>

    //add stuff here!
    <div class="form-group">
        <div class="col-sm-10">
            @Html.HiddenFor(m => m.IdUser, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit changes</button>
        </div>
    </div>
}

@section scripts {
    <script type="text/javascript" src="@Url.Content("~/Scripts/app/Profile/LocalitiesDropdown.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/app/Profile/SelectInterests.js")"></script>
}


