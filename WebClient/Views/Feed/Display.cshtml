@{ Layout = null; }

@model BusinessEntities.CustomTypes.PostDisplay.DisplayPostModel

<div class="container display-post well" data-idPost="@Model.IdPost">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <h4>@Html.DisplayFor(model => model.Title)</h4>
        </div>

        <div class="col-sm-6 col-sm-offset-3">
            <h5>@Html.ActionLink(Model.AuthorFullName, "ViewProfile", "Profile", new { id = Model.IdUser }, null)</h5>
        </div>

        <div class="col-sm-6 col-sm-offset-3">
            <p>@Html.DisplayFor(model => model.Body)</p>
        </div>

        <div class="col-sm-6 col-sm-offset-3">
            <p>@Html.DisplayFor(model => model.CreatedOn)</p>
        </div>

        <div class="col-sm-2 col-sm-offset-3">
            @if (Model.IsLikedByCurrentUser ?? false)
            {
                <button class="btn btn-sm btn-set-like btn-dislike"><span class='glyphicon glyphicon-thumbs-down'></span> Dislike</button>
            }
            else
            {
                <button class="btn btn-sm btn-set-like btn-like"><span class='glyphicon glyphicon-thumbs-up'></span> Like</button>
            }
            <span class="like-count" data-count="@Model.LikeCount">@Model.LikeCount Likes</span>
        </div>

        <div class="col-sm-3">
            @Html.Partial("~/Views/Comment/CreateCommentForm.cshtml")
        </div>

        <div class="col-sm-6 col-sm-offset-3">
            <div>
                <button class="btn btn-load-comments">More comments</button>
                <button class="btn btn-hide-comments">Hide comments</button>
                <div class="comments-display" data-pageNumber="0">
                    @*Comments will go in here*@
                </div>
            
            
            </div>
        </div>
    </div>
</div>